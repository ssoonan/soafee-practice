FROM openjdk:11-jdk-bullseye

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV CMAKE_VERSION=3.31.1

# Install system dependencies
RUN apt update && apt install -y \
    wget \
    curl \
    git \
    build-essential \
    python3 \
    python3-pip \
    python3-dev \
    libpython3-dev \
    libasio-dev \
    libtinyxml2-dev \
    swig \
    gnupg \
    && apt clean && rm -rf /var/lib/apt/lists/*

# Install specific version of CMake
WORKDIR /tmp/cmake-build
RUN wget https://github.com/Kitware/CMake/releases/download/v${CMAKE_VERSION}/cmake-${CMAKE_VERSION}.tar.gz && \
    tar -xzf cmake-${CMAKE_VERSION}.tar.gz && \
    cd cmake-${CMAKE_VERSION} && \
    ./bootstrap && \
    make -j$(nproc) && \
    make install && \
    cd / && \
    rm -rf /tmp/cmake-build

# Verify CMake installation
RUN cmake --version

# Install Python-based tools
RUN pip install --no-cache-dir -U \
    colcon-common-extensions \
    vcstool

# Fast DDS Python binding setup
WORKDIR /fastdds_python_ws/src

# Download Fast DDS Python repositories
RUN wget https://raw.githubusercontent.com/eProsima/Fast-DDS-python/main/fastdds_python.repos

# Import repositories
WORKDIR /fastdds_python_ws
RUN vcs import src < src/fastdds_python.repos

# Build Fast DDS Python
RUN colcon build

# Install Fast-DDS-Gen
WORKDIR /Fast-DDS/src
RUN git clone --recursive https://github.com/eProsima/Fast-DDS-Gen.git fastddsgen && \
    cd fastddsgen && \
    ./gradlew assemble

# Set up environment
RUN echo "source /fastdds_python_ws/install/setup.zsh" >> /root/.zshrc
ENV PATH="/Fast-DDS/src/fastddsgen/scripts:$PATH"

# Set default command
CMD ["/bin/bash"]
